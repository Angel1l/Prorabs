<Window x:Class="Сафари.Views.ViewForMaterials.CountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:countmodels="clr-namespace:Сафари.Data.Models.CountModels" xmlns:forcount="clr-namespace:Сафари.ViewModels.ForCount" d:DataContext="{d:DesignInstance Type=forcount:CountVM}"
        mc:Ignorable="d"
        Title="CountWindow" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
                <TextBlock Text="В якій кількості?"/>
                <TextBox Text="{Binding AddNewCount}"/>
            </StackPanel>
            <Button Grid.Row="1" Content="Ок" 
                Click="Button_Click"/>

        </Grid>
    </Grid>
</Window>
